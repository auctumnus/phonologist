{
  "name": "phonologist",
  "version": "0.1.0",
  "description": "analyzes phonemes into feature lists",
  "main": "dist/phonologist.cjs.js",
  "module": "dist/phonologist.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "microbundle",
    "watch": "microbundle watch",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "microbundle && uvu -r esm test",
    "test:watch": "concurrently \"microbundle watch\" \"uvu -wr esm test\"",
    "preinstall": "npx only-allow pnpm"
  },
  "author": "autumn",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash-es": "^4.17.4",
    "concurrently": "^6.2.0",
    "esbuild": "^0.13.15",
    "esm": "^3.2.25",
    "micromatch": "^4.0.4",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1",
    "typescript": "^4.3.5",
    "uvu": "^0.5.1",
    "uvu-watch": "^1.0.11"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "microbundle": "^0.15.1"
  }
}
